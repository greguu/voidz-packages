# Template file for 'libdom'
pkgname=libdom
version=0.4.2
revision=1
hostmakedepends="pkg-config perl netsurf-buildsystem"
makedepends="expat-devel libparserutils-devel libwapcaplet-devel libhubbub-devel"
short_desc="Implementation of the W3C DOM, written in C"
maintainer="Orphaned <orphan@voidlinux.org>"
license="MIT"
homepage="https://www.netsurf-browser.org"
distfiles="https://download.netsurf-browser.org/libs/releases/libdom-${version}-src.tar.gz"
checksum=d05e45af16547014c2b0a3aecf3670fa13d419f505b3f5fc7ac8a1491fc30f3c

post_extract() {
	vsed -i Makefile -e 's/_BSD_SOURCE/_DEFAULT_SOURCE/g'
}

pre_build() {
    # Fix 'calloc' argument order in the source files to satisfy GCC 14
    # This swaps: calloc(sizeof(X), Y) -> calloc(Y, sizeof(X))
    
    # 1. Fix expat_xmlparser.c
    sed -i 's/calloc(sizeof(\*parser), 1)/calloc(1, sizeof(*parser))/' \
        bindings/xml/expat_xmlparser.c

    # 2. Fix node.c
    sed -i 's/calloc(sizeof(\*t), size)/calloc(size, sizeof(*t))/' \
        src/core/node.c

    # 3. Fix html_document.c
    sed -i 's/calloc(sizeof(dom_string \*), hds_COUNT)/calloc(hds_COUNT, sizeof(dom_string *))/' \
        src/html/html_document.c
    sed -i 's/calloc(sizeof(dom_string \*),/calloc(hds_COUNT,/; /calloc(hds_COUNT,/n; s/hds_COUNT)/sizeof(dom_string *))/' \
        src/html/html_document.c
}

do_build() {
	make ${makejobs} COMPONENT_TYPE=lib-shared PREFIX=/usr
	make ${makejobs} COMPONENT_TYPE=lib-static PREFIX=/usr
}

do_install() {
	make COMPONENT_TYPE=lib-shared PREFIX=/usr DESTDIR=${DESTDIR} install
	make COMPONENT_TYPE=lib-static PREFIX=/usr DESTDIR=${DESTDIR} install

	vlicense COPYING
}

libdom-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
